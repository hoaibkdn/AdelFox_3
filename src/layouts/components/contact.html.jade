section.c-contact
  .c-contact__title
     +tit-desc-section("contact us", "It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout.")
  .c-contact__img
  .c-contact__form
    .container
      .row
        form.o-form(action="#")
          input(type="text").form-control.o-form__text(placeholder="your name")
          input(type="email").form-control.o-form__email(placeholder="email address")
          input(type="text").form-control.o-form__text(placeholder="subject")
          textarea(rows="5").form-control.o-form__text(placeholder="your name")
          input(type="submit").btn.btn-default.o-form__submit(value="submit now")